    "ignore": "^2.2.15",
    "promise": "^6.1.0",
    "verror": "^1.6.0"
  },
  "devDependencies": {
    "mocha": "=2.2.5"
  },
  "keywords": [
    "font",
    "fontforge",
    "font-face",
    "woff",
